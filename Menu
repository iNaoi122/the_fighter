import pygame
import sys
import pygame.freetype
from Fighter_class import Button, X_max, Y_max
menu_work = True

size_x = 100
size_y = 50

pygame.init()
screen = pygame.display.set_mode((600, 600))
button = Button(X_max/2 - size_x, Y_max/2 - size_y, (153, 50, 204), size_x, size_y, "Start")

while menu_work:

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()

        elif event.type == pygame.KEYDOWN:
            if event.key == pygame.K_ESCAPE:
                pygame.quit()
                sys.exit()
        elif event.type == pygame.MOUSEBUTTONDOWN and event.button == 1:
            if button.click(event.pos):
                print("Game start")
    screen.fill((0, 0, 0))
    button.draw(screen)
    pygame.display.flip()
