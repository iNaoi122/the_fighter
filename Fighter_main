import sys
from Fighter_class import *
import time
import pygame.freetype

pygame.init()
clock = pygame.time.Clock()

screen = pygame.display.set_mode((600, 600))

add_enemy = pygame.USEREVENT + 1
add_boost = pygame.USEREVENT + 2

score_font = pygame.freetype.SysFont("Arial", 20)
Health_font = pygame.freetype.SysFont("Arial", 20)
pygame.time.set_timer(add_boost, 500)
pygame.time.set_timer(add_enemy, 100)

player = Player()

bullets_boosts = pygame.sprite.Group()
health_boosts = pygame.sprite.Group()
enemies = pygame.sprite.Group()
all_sprites = pygame.sprite.Group()
bullets = pygame.sprite.Group()
score_boosts = pygame.sprite.Group()

all_sprites.add(player)
double = False
timer_boost_bullet = 0
timer_boost_score = 0

Score = 0

time_start = time.perf_counter()

bonus = 0
boosted = 1

while True:

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            pygame.quit()
            sys.exit()

        elif event.type == pygame.KEYDOWN:
            if event.key == pygame.K_ESCAPE:
                pygame.quit()
                sys.exit()
            if event.key == pygame.K_SPACE and double == True:
                bullet = Bullet(player.pos_x() - 10, player.pos_y())
                bullet_2 = Bullet(player.pos_x() + 10, player.pos_y())
                bullets.add(bullet_2)
                bullets.add(bullet)
                all_sprites.add(bullet)
                all_sprites.add(bullet_2)

            elif event.key == pygame.K_SPACE:
                bullet = Bullet(player.pos_x(), player.pos_y())
                bullets.add(bullet)
                all_sprites.add(bullet)

        elif event.type == add_enemy:
            enemy = Enemy()
            enemies.add(enemy)
            all_sprites.add(enemy)

        elif event.type == add_boost:
            i = random.randint(1, 3)
            if i == 1:
                boost = Health()
                health_boosts.add(boost)
                all_sprites.add(boost)
            if i == 2:
                boost = Rise_bullet()
                bullets_boosts.add(boost)
                all_sprites.add(boost)
            if i == 3:
                boost = Score_boost()
                score_boosts.add(boost)
                all_sprites.add(boost)

    key = pygame.key.get_pressed()

    player.up(key)

    enemies.update()
    bullets.update()
    health_boosts.update()
    bullets_boosts.update()
    score_boosts.update()

    clock.tick(60)
    screen.fill((0, 0, 0))

    score_font.render_to(screen, (X_max / 2 - 50, 30), f"Score: {round(Score)}", (240, 255, 240))
    Health_font.render_to(screen, (X_max / 2 - 50, 550), f"Health: {player.health}", (240, 255, 240))

    for entity in all_sprites:
        screen.blit(entity.surf, entity.rect)

    if pygame.sprite.spritecollide(player, enemies, True):
        if player.health - 1 == 0:
            print("Game over")
            print(Score)
            print(time.perf_counter() - time_start)
            print(bonus)
            pygame.quit()
            sys.exit()
        else:
            player.health = player.health - 1
            print("You damaged")

    if pygame.sprite.spritecollide(player, health_boosts, True):
        if player.health < 3:
            player.health += 1
            print("You healthy")
        else:
            print("You health is full")

    if pygame.sprite.spritecollide(player, bullets_boosts, True):
        print("You boosted bullets")
        double = True
        timer_boost_bullet = time.perf_counter()
    if time.perf_counter() - timer_boost_bullet >= 2:
        double = False

    if pygame.sprite.spritecollide(player, score_boosts, True):
        print("You boosted score")
        boosted = 2
    if time.perf_counter() - timer_boost_score >= 5:
        boosted = 1

    if pygame.sprite.groupcollide(bullets, enemies, True, True):
        bonus += 10

    Score = (time.perf_counter() - time_start) * 100 * boosted + bonus
    pygame.display.flip()
